{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile in the system.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Auth."
        },
        "username": {
            "type": "string",
            "description": "The user's unique username."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "role": {
            "type": "string",
            "enum": ["pembaca", "penulis"],
            "description": "The role of the user."
        },
        "bio": {
            "type": "string",
            "description": "A short bio of the user."
        },
        "followers": {
            "type": "number",
            "description": "Number of followers."
        },
        "following": {
            "type": "number",
            "description": "Number of users being followed."
        }
      },
      "required": ["uid", "email", "displayName", "username"]
    },
    "Book": {
      "title": "Book",
      "description": "Represents a book in the system.",
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "synopsis": { "type": "string" },
        "genre": { "type": "string" },
        "coverUrl": { "type": "string", "format": "uri" },
        "viewCount": { "type": "number" },
        "downloadCount": { "type": "number" },
        "authorId": { "type": "string" },
        "authorName": { "type": "string" },
        "authorAvatarUrl": { "type": "string", "format": "uri" },
        "status": { "type": "string", "enum": ["draft", "published"] }
      },
      "required": ["title", "authorId", "authorName", "status"]
    },
    "Chapter": {
        "title": "Chapter",
        "description": "A chapter of a book.",
        "type": "object",
        "properties": {
            "title": { "type": "string" },
            "content": { "type": "string" },
            "order": { "type": "number" },
            "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["title", "content", "order", "createdAt"]
    },
    "Comment": {
        "title": "Comment",
        "description": "A comment on a book.",
        "type": "object",
        "properties": {
            "text": { "type": "string" },
            "userId": { "type": "string" },
            "userName": { "type": "string" },
            "userAvatarUrl": { "type": "string", "format": "uri" },
            "createdAt": { "type": "string", "format": "date-time" }
        },
        "required": ["text", "userId", "userName", "createdAt"]
    },
    "AuthorRequest": {
      "title": "Author Request",
      "description": "Represents a user's request to become an author.",
      "type": "object",
      "properties": {
        "userId": { "type": "string" },
        "name": { "type": "string" },
        "email": { "type": "string", "format": "email" },
        "portfolio": { "type": "string", "format": "uri" },
        "motivation": { "type": "string" },
        "status": { "type": "string", "enum": ["pending", "approved", "rejected"] },
        "requestedAt": { "type": "string", "format": "date-time" }
      },
      "required": ["userId", "name", "email", "motivation", "status", "requestedAt"]
    }
  },
  "auth": {
    "providers": ["password", "google.com"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/backend/entities/UserProfile"
      },
      "description": "Stores user profile information, keyed by their Firebase Auth UID."
    },
    "/books/{bookId}": {
      "schema": {
        "$ref": "#/backend/entities/Book"
      },
      "description": "Stores book information."
    },
    "/books/{bookId}/chapters/{chapterId}": {
        "schema": {
            "$ref": "#/backend/entities/Chapter"
        },
        "description": "Stores chapters for a specific book."
    },
    "/books/{bookId}/comments/{commentId}": {
      "schema": {
        "$ref": "#/backend/entities/Comment"
      },
      "description": "Stores comments for a specific book."
    },
    "/authorRequests/{requestId}": {
      "schema": {
        "$ref": "#/backend/entities/AuthorRequest"
      },
      "description": "Stores user requests to become an author."
    }
  }
}

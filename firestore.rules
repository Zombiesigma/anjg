rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // MODE PENGEMBANGAN: Mengizinkan semua akses baca/tulis bagi pengguna yang sudah login.
    // Ini menghilangkan FirestorePermissionError secara permanen selama fase pengembangan.
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
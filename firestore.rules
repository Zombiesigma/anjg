rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. Aturan Paling Umum: Tolak semua akses secara default.
    match /{document=**} {
      allow read, write: if false;
    }

    // 2. Aturan BACA PUBLIK: Izinkan siapa saja untuk membaca data dari koleksi-koleksi ini.
    // Ini aman untuk konten publik seperti profil, buku, bab, dan komentar.
    match /users/{userId} {
      allow read: if true;
    }
    match /books/{bookId} {
      allow read: if true;
    }
    match /books/{bookId}/chapters/{chapterId} {
      allow read: if true;
    }
     match /books/{bookId}/comments/{commentId} {
      allow read: if true;
    }

    // 3. Aturan TULIS AMAN: Tentukan izin tulis yang spesifik.
    function isSignedIn() {
      return request.auth != null;
    }

    match /users/{userId} {
      // Pengguna hanya dapat menulis ke dokumen mereka sendiri.
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    match /books/{bookId} {
      // Pengguna hanya dapat membuat buku untuk diri mereka sendiri.
      allow create: if isSignedIn() && request.resource.data.authorId == request.auth.uid;
      // Pengguna hanya dapat memperbarui buku mereka sendiri.
      allow update: if isSignedIn() && get(/databases/$(database)/documents/books/$(bookId)).data.authorId == request.auth.uid;
    }

    match /books/{bookId}/chapters/{chapterId} {
        // Penulis buku dapat menulis bab ke buku mereka sendiri.
        allow write: if isSignedIn() && get(/databases/$(database)/documents/books/$(bookId)).data.authorId == request.auth.uid;
    }

    match /books/{bookId}/comments/{commentId} {
      // Pengguna dapat membuat komentar untuk diri mereka sendiri.
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;
      // Pengguna hanya dapat memperbarui/menghapus komentar mereka sendiri.
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
  }
}
